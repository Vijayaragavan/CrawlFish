	<div class="more-f2">There are many phones belonging to <span class="more"><%=  @mobile_general_type.titlecase %></span> mobile category<br/><br/><%= link_to "BROWSE", {:controller => 'search',:action => 'index',:query=>@mobile_general_type.titlecase},:class=>'more-a'%></div>
	<br/>
<% end %>

