<table class="cf-specific-product-header-table" cellspacing=0 cellpadding=0>

<tr>

<td class="cf-specific-product-header-table-image">

	<%= image_tag(@product_image_url, :alt => @product_name, :title => @product_name) %>

</td>

<td class="cf-specific-product-header-table-details">

	<div class="cf-specific-product-header-table-details-text"><%= @product_name.titlecase %></div>

	<div class="cf-specific-product-header-table-details-avl">

		<span class="green">In stock:</span>
		<span class="count"><%= @online_grids_count %> online shops</span><span>&nbsp;and&nbsp;</span>
		<span class="count"><%=  @local_grids_count %> local shops</span>

	</div>

	<div class="cf-specific-product-header-table-details-startsat"><span>Starts at <span class="rs-green">Rs.<%=(@starts_at.to_i).to_s%></span></span></div>
	<div class="cf-specific-product-header-table-details-atodetails"><a href="#details">MOBILE DETAILS</a></div>

	<div class="cf-specific-product-header-table-details-atodeal"><a href="#deal">DEAL OF THE DAY</a></div>
</td>
</tr>
</table>

